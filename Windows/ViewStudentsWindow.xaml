<Window x:Class="MFA.Windows.ViewStudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Students" Height="550" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#2C3E50">

    <Grid Margin="15">
    
    <StackPanel>
        <TextBlock Text="Student List" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Foreground="LightGreen" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <DataGrid x:Name="dgStudents"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="White"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Roll No" Binding="{Binding RollNo}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Father Name" Binding="{Binding FatherName}" Width="200"/>
                <DataGridTextColumn Header="Enrollment Date" Binding="{Binding EnrollmentDate, StringFormat=d}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
    
</Grid>
</Window>