<Window x:Class="MFA.Windows.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signup Window" Height="600" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#2C3E50">
    <Grid Margin="20">
        <TextBlock Text="Sign Up" FontSize="28" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel VerticalAlignment="Top" Margin="0,60,0,0">
            <TextBlock Text="Full Name" Foreground="White"/>
            <TextBox x:Name="txtFullName" Height="30" Margin="0,5,0,15"/>

            <TextBlock Text="Username" Foreground="White"/>
            <TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,15"/>

            <TextBlock Text="Password" Foreground="White"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,15"/>

            <TextBlock Text="Role" Foreground="White"/>
            <ComboBox x:Name="cmbRole" Height="30" Margin="0,5,0,25"/>

            <Button x:Name="btnRegister" Content="Register" Height="35"
                    Background="LightGray" Foreground="#2C3E50"
                    Click="btnRegister_Click"/>

            <Button x:Name="Loginbtn" Content="Already have an account? Login"
                    Height="35" Width="230" Background="#2196F3" Foreground="White" Click="btnLogin"/>

        </StackPanel>
    </Grid>
</Window>