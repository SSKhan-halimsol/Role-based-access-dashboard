<Window x:Class="MFA.Windows.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Dashboard" Height="800" Width="2000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowState="Maximized">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Background="#2C3E50" Grid.Column="0">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Menu"
                   Foreground="White"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="10"/>

                <TextBlock Text="--------------------------------------" Foreground="White"/>
                <Button x:Name="btnAddStudent" Content="Add Student 👨‍🎓" 
                    Height="40" Margin="5"
                    Background="#34495E" 
                    Foreground="White" 
                    Click="btnAddStudent_Click"/>


                <Button x:Name="btnUpdateStudent" Content="Update Student 👨‍🎓" 
                    Height="40" Margin="5"
                    Background="#34495E" 
                    Foreground="White" 
                    Click="btnUpdateStudent_Click"/>


                <Button x:Name="btnDeleteStudent" Content="Delete Student ✂" 
                    Height="40" Margin="5"
                    Background="#34495E" 
                    Foreground="White" 
                    Click="btnDeleteStudent_Click"/>


                <Button x:Name="btnViewStudents" Content="View Students 📋" 
                    Height="40" Margin="5"
                    Background="#34495E" 
                    Foreground="White" 
                    Click="btnViewStudents_Click"/>
            </StackPanel>

            <Button Content="↩  Logout" Foreground="White" 
                    Height="40" Margin="5"
                    Background="IndianRed"
                    VerticalAlignment="Bottom"
                    Click="btnLogout_Click"/>
        </DockPanel>
        <!--Sidebar ended-->
        
        <!--Main content-->
        <Grid Grid.Column="1" Background="#2C3E50">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Welcome Label -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0">
                <Label x:Name="lblWelcome" 
               FontSize="45" 
               Foreground="#4CAF50" 
               FontWeight="Bold" 
               HorizontalAlignment="Center">
                    Welcome to the Dashboard
                </Label>
            </StackPanel>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Chart: Students Today (Line Chart) -->
                <oxy:PlotView x:Name="StudentsTodayChart"
                  Grid.Column="0"
                  Height="320"
                  Margin="5"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"/>

                <oxy:PlotView x:Name="StudentPieChart"
              Grid.Column="1"
              Height="320"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"/>
            </Grid>

            <DataGrid x:Name="dgStudents"
          Grid.Row="2"
          AutoGenerateColumns="False"
          Background="White"
          Foreground="Black"
          Margin="0"
          Height="300"
          Width="650"
          CanUserAddRows="False"
          IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Roll No" Binding="{Binding RollNo}" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Father Name" Binding="{Binding FatherName}" Width="200"/>
                    <DataGridTextColumn Header="Enrollment Date" Binding="{Binding EnrollmentDate, StringFormat=d}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>