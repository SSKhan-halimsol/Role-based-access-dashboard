<Window x:Class="MFA.Windows.DeleteStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MFA.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="DeleteStudentWindow" Height="600" Width="600">
    <Grid Background="#2C3E50">
        <StackPanel Margin="20">
            <TextBlock Text="Delete Student" FontSize="20" Foreground="White" Margin="0,0,0,20"/>

            <TextBlock Text="Select Roll No" Foreground="White" Margin="0,10,0,0"/>
            <ComboBox x:Name="cmbRollNo" Height="30" Margin="0,5,0,0" SelectionChanged="cmbRollNo_SelectionChanged"/>

            <TextBlock Text="Name" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="txtName" Height="30" Margin="0,5,0,0" IsReadOnly="True"/>

            <TextBlock Text="Father Name" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="txtFatherName" Height="30" Margin="0,5,0,0" IsReadOnly="True"/>

            <TextBlock Text="Enrollment Date" Foreground="White" Margin="0,10,0,0"/>
            <DatePicker x:Name="dpEnrollmentDate" Margin="0,5,0,0" IsEnabled="False"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnPrevPage" Content="Previous" Width="100" Margin="5" Click="btnPrevPage_Click"/>
                <TextBlock x:Name="txtPageInfo" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0"/>
                <Button x:Name="btnNextPage" Content="Next" Width="100" Margin="5" Click="btnNextPage_Click"/>
            </StackPanel>

            <Button Content="Delete Student" Height="35" Background="IndianRed" Foreground="#34495E" Margin="0,20,0,0" Click="btnDeleteStudent_Click"/>
        </StackPanel>
    </Grid>
</Window>
