<Window x:Class="MFA.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MFA.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>


        <TextBlock Text="Login" FontSize="40" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Grid.Row="0"
                   FontWeight="ExtraBold"/>

        <StackPanel VerticalAlignment="Stretch" Width="400" HorizontalAlignment="Center" Grid.Row="1">

            <TextBlock Text="Username" Foreground="White" Margin="0,10,0,0"/>
            <TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,0"/>

            <TextBlock Text="Password" Foreground="White" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,0"/>

            <Button x:Name="btnLogin" Content="Login" Height="35" Background="LightGray" Foreground="#2C3E50" Margin="0,20,0,0" Click="btnLogin_Click"/>

            <Button x:Name="btnSignup" Content="Don't have an account? Signup" Height="35" Width="200" Background="#2196F3" Foreground="White" Click="btnSignup_Click"/>
        </StackPanel>
    </Grid>
</Window>
