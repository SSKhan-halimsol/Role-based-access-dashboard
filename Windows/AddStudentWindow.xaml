<Window x:Class="MFA.Windows.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Student" Height="450" Width="400" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">

    <Grid Background="#34495E">
        <StackPanel Margin="20">
            <TextBlock Text="Add Student" FontSize="20" Foreground="White" Margin="0,0,0,20"/>

            <TextBlock Text="Roll No" Foreground="White" Margin="0,5,0,0"/>
            <TextBox x:Name="txtRollNo" Height="30" Margin="0,5,0,0"/>

            <TextBlock Text="Name" Foreground="White" Margin="0,5,0,0"/>
            <TextBox x:Name="txtName" Height="30" Margin="0,5,0,0"/>

            <TextBlock Text="Father Name" Foreground="White" Margin="0,5,0,0"/>
            <TextBox x:Name="txtFatherName" Height="30" Margin="0,5,0,0"/>

            <TextBlock Text="Enrollment Date" Foreground="White" Margin="0,5,0,0"/>
            <DatePicker x:Name="dpEnrollmentDate" Height="30" Margin="0,5,0,0"/>

            <Button Content="Add Student" Height="35" Background="LightGray" Foreground="#2C3E50" Margin="0,20,0,0" Click="btnAddStudent_Click"/>
        </StackPanel>
        
    </Grid>
</Window>